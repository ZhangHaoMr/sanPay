<!-- 订单页面 -->
<view class="order-box">
  <!-- 商品卡片 -->
  <view class="card">
    <view class="box" wx:if="carts && carts.length > 0" wx:for="{{carts}}" wx:key="_id">
      <view class="commodity">
        <text>{{item.title}}</text>
        <text class="actualPayment">￥{{item.price}}</text>
      </view>
      <view class="num">×{{item.num}}</view>
    </view>
    <view class="unpack" bindtap="unfold">
      共{{allCarts.length}}件商品 {{unfold ? '收起':'展开'}} 
    </view>
  </view>

  <!-- 余额 -->
  <view class="balance margin">
    <view class="balance-box">
      余额 <text class="actualPayment">（￥ 4）</text>
    </view>
    <switch type="switch" checked color="#fc9f28" bindchange=""/>
  </view>

  <!-- 商品金额 -->
  <view class="margin">
    <text>商品金额</text>
    <text class="actualPayment">￥{{totalValue}}</text>
  </view>

  <!-- 余额减扣 -->
  <view class="margin">
    <text>余额减扣</text>
    <text class="actualPayment">-￥0</text>
  </view>

  <!-- 提示 -->
  <view class="tips">
    <view class="waring">!</view>
    <text>请支付完成后携带商品</text>
  </view>
</view>
<!-- 底部结算 -->
<view class="order-bottom">
  <view class="bottom-left">
    实际支付：<text class="actualPayment">￥0.2</text>
  </view>
  <view class="bottom-right">
    <button class="confirmPayment">确认支付</button>
  </view>
</view>