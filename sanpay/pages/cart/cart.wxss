/* pages/cart/cart.wxss */
.box{
  width: 100%;
  height: 210rpx;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  background-color: #f7f7f6;
  border: 1px solid #ccc;
}
.box .box-right {
  width: 280rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  left: 440rpx;
  bottom: 10rpx;
}

.box .box-right .calculate{
  width: 70rpx;
  height: 70rpx;
  border: 4rpx solid #efd0ac;
  border-radius: 50%;
  padding: 0;
  text-align: center;
  line-height: 70rpx;
}
.box .box-right .subtract {
  color: #d6b58c;
}
.box .box-right .plus {
  color: #ffffff;
  background-color: #fe9c25;
}

.box .box-right input {
  flex: 2;
  height: 80%;
  border: 2px solid #efd0ac;
  border-radius: 40rpx;
  margin: 0 10rpx;
  text-align: center;
}

.bottom{
  width: 100%;
  height: 170rpx;
  background-color: aqua;
  position: fixed;
  left: 0;
  bottom: 0;
}

.bottom .aggregate{
  width: 100%;
  height: 80rpx;
  background-color: #fefefd;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}
.bottom .aggregate .price{
  color: #cd4d47;
}


.bottom .button{
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom .button button{
  flex: 1;
  height: 90rpx;
  border-radius: 0;
  color: #ffffff;
}
.bottom .button button.goToResult{
  background-color: #fd0000;
}
